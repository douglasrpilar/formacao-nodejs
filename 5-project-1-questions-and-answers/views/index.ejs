<%- include ('partials/header.ejs') %>

<h1>Questions</h1>
<a href="/question" class="btn btn-success">Question</a>
<br />
<hr />
<% questions.forEach((question) => { %>
  <div class="card">
    <div class="card-body">
      <h3><%= question.title %></h3>
    </div>
    <div class="card-footer">
      <a href="/question/<%= question.id %>" class="btn btn-success">Answer</a>
    </div>
  </div>
  <br />
<% }) %>

<%- include ('partials/footer.ejs') %>